{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "paths": {
      "app/*": ["./app/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "exclude": ["dist", "build", "node_modules"]
}
